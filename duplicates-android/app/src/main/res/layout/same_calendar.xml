<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:outlineProvider="bounds"
    android:padding="8dp">

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/match"/>

    <LinearLayout
        android:id="@+id/dates1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/start1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="@string/dummy_date_time"/>

        <TextView
            android:id="@+id/end1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="@string/dummy_date_time"/>

        <ImageView
            android:id="@+id/recur1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_event_repeat"/>
    </LinearLayout>

    <View
        android:id="@+id/cal_color1"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location1"
        android:layout_alignTop="@+id/title1"
        tools:background="@color/dummy_color"/>

    <View
        android:id="@+id/color1"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cal_color1"
        android:layout_alignTop="@+id/cal_color1"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/cal_color1"
        tools:background="@color/dummy_color"/>

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dates1"
        android:layout_toRightOf="@+id/color1"
        android:maxLines="3"
        tools:text="@string/dummy_text_long"/>

    <TextView
        android:id="@+id/description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/color1"
        android:maxLines="2"
        tools:text="@string/dummy_text_long"/>

    <TextView
        android:id="@+id/location1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description1"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/color1"
        android:maxLines="2"
        tools:text="@string/dummy_text_long"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/location1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/divider_horizontal_bright"/>

    <LinearLayout
        android:id="@+id/dates2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/start2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="@string/dummy_date_time"/>

        <TextView
            android:id="@+id/end2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="@string/dummy_date_time"/>

        <ImageView
            android:id="@+id/recur2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_event_repeat"/>
    </LinearLayout>

    <View
        android:id="@+id/cal_color2"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location2"
        android:layout_alignTop="@+id/title2"
        tools:background="@color/dummy_color"/>

    <View
        android:id="@+id/color2"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cal_color2"
        android:layout_alignTop="@+id/cal_color2"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/cal_color2"
        tools:background="@color/dummy_color"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dates2"
        android:layout_toRightOf="@+id/color2"
        android:maxLines="3"
        tools:text="@string/dummy_text_long"/>

    <TextView
        android:id="@+id/description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/color2"
        android:maxLines="2"
        tools:text="@string/dummy_text_long"/>

    <TextView
        android:id="@+id/location2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description2"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/color2"
        android:maxLines="2"
        tools:text="@string/dummy_text_long"/>

</RelativeLayout>